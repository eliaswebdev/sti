<%- model_class = PessoaFisica -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cpf) %>:</strong></dt>
  <dd><%= @pessoa_fisica.cpf %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @pessoa_fisica.nome %></dd>

  <dt><strong><%= model_class.human_attribute_name(:dependentes) %>:</strong></dt>
  <dd>
    <ol>
      <% @pessoa_fisica.dependentes.each do |dependente| %>
      <li><%= dependente.nome %></li>
      <% end %>
    </ol>
  </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pessoa_fisicas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pessoa_fisica_path(@pessoa_fisica), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pessoa_fisica_path(@pessoa_fisica),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
